@model FinalProjectSPC.DTO.LoginDto

@{
    ViewData["Title"] = "Find";
}

<h2>Create</h2>

<h4>Welcome @Model.Name!</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="UserId" value="@Model.UserId" type="hidden" />
                <input asp-for="IsStudent" value="@Model.IsStudent" type="hidden" />
                <select asp-for="CourseId" asp-items="@(new SelectList(Model.Courses,"Id","Name", Model.Courses.ElementAt(0)))" class="form-control">
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Check-in/out" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>