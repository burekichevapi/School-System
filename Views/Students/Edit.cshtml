@model FinalProjectSPC.DTO.StudentDto

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Student</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <text>@Model.Id.ToString().Substring(Model.Id.ToString().Length - 6)</text>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            @for (int i = 0; i < Model.Courses.Count; i++)
            {
                <div class="form-group">
                    <h3>Enrolled Courses</h3>
                    <label asp-for="Courses[i]" class="control-label">@Model.Courses[i].Name</label>
                    @Html.HiddenFor(m => m.Courses[i].Name)
                    <br />
                    <text class="control-label">@Model.Courses[i].MeetingTime</text>
                    @Html.HiddenFor(m => m.Courses[i].MeetingTime)
                    <br />
                    <text class="control-label">@Model.Courses[i].EndingTime</text>
                    @Html.HiddenFor(m => m.Courses[i].EndingTime)
                    <br />
                    <text class="control-label">@Model.Courses[i].Description</text>
                    @Html.HiddenFor(m => m.Courses[i].Description)
                    @Html.HiddenFor(m => m.Courses[i].Id)
                </div>
                <hr></hr>
            }
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
